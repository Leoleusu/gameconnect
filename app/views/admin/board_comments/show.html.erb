<h1 class="text-center">掲示板コメント情報</h1>
<div class="row-fluid">
  <table class="table col-8 offset-md-2">
    <tr><th>コメントID</th><td><%= @board_comment.id %></td></tr>
    <tr><th>コメントユーザー</th><td><%= link_to admin_users_path(@board_comment.user) do %>
      <%= image_tag @board_comment.user.get_image(30,30) %><%= @board_comment.user.name %>
    <% end %></td></tr>
    <tr class="pb-0 mb-0"><th>コメント本文</th><td><%= @board_comment.body %></td></tr>
  </table>
  <%= link_to "コメントを削除する",admin_board_comment_path(@board_comment),method: :delete,class: "offset-md-6 pt-0 mt-0" %>
</div>
<div class="row-fluid pt-5">
  <table class="table table-hover col-8 offset-md-2">
    <tr class="moves-contents" onclick='window.location="/admin/boards/<%= @board_comment.board_id %>"' role="link">
      <th>コメント先の掲示板</th><td><%= @board_comment.board.title %></td>
    </tr>
    <tr class="moves-contents" onclick='window.location="/admin/boards/<%= @board_comment.board_id %>"' role="link">
      <th>掲示板の本文</th><td><%= @board_comment.board.body %></td>
    <tr class="moves-contents" onclick='window.location="/admin/users/<%= @board_comment.board.user.id %>"' role="link">
      <th>投稿ユーザー</th><td><%= image_tag @board_comment.board.user.get_image(30,30) %><%= @board_comment.board.user.name %></td>
  </table>
</div>
