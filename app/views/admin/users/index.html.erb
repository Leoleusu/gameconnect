<h1 class="text-center">ユーザー一覧</h1>
<div class="container">
  <table class="table table-hover">
    <thead>
      <tr>
      <th>ID</th>
      <th>名前</th>
      <th>自己紹介</th>
      <th>会員ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |u |%>
      <tr class="moves-contents" onclick='window.location="/admin/users/<%= u.id %>"' role="link">
        <td><%= u.id %></td>
        <td><%= image_tag u.get_image(30,30) %><%= u.name %></td>
        <td><%= u.introduction %></td>
        <td><%= u.is_deleted ? "退会" : "有効" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
