<h1 class="text-center">掲示板一覧</h1>
<div class="container">
  <table class="table table-hover">
    <thead>
      <tr>
      <th>ID</th>
      <th>掲示板タイトル</th>
      <th>本文</th>
      <th>作成ユーザー</th>
      <th>コメント数</th>
      </tr>
    </thead>
    <tbody>
      <% @boards.each do |b|%>
      <tr class="moves-contents" onclick='window.location="/admin/boards/<%= b.id %>"' role="link">
        <td><%= b.id %></td>
        <td><%= b.title %></td>
        <td><%= b.body %></td>
        <td><%= b.user.name %></td>
        <td><%= b.board_comments.count %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
