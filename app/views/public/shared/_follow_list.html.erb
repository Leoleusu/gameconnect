<h3 class="text">フォロー一覧</h3>
<div class="row">
  <% if users.exists? %>
    <% users.each do |u| %>
      <table class="table">
        <thead>
          <tr>
            <th>name</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= u.name %></td>
            <td>フォロー数：    <%= u.followings.count %></td>
            <td>フォロワー数：  <%= u.followers.count %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  <% else %>
    <p class="text">フォローしているユーザーはいません。</p>
  <% end %>
</div>