<h2 class="text-center pb-5">検索結果</h2>
<div class="wrap">
  <ul id="tab-menu">
    <li><a href="#tab1" class="active">ユーザー</a></li>
    <li><a href="#tab2" class="active">投稿</a></li>
  </ul>

  <div id="tab-contents">
    <div id="tab1" class="tab">
      <% if @range == "User" %>
      <table class="table table-hover table-inverse col-8 offset-md-2">
        <tbody>
          <% @users.each do |u| %>
            <tr class="moves-contents" onclick='window.location="/users/<%= u.id %>"' role="link">
              <td><%= u.name %></td>
              <td><%= u.introduction %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% end %>
    </div>
    <div id="tab2" class="tab">
      <% if @range == "Post" %>
      <table class="table table-hover table-inverse col-8 offset-md-2">
        <tbody>
          <% @posts.each do |po| %>
            <tr class="moves-contents" onclick='window.location="/posts/<%= po.id %>"' role="link">
              <td><%= po.user.name %></td>
              <td><%= po.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>