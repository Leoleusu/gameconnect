<h2>検索結果</h2>
<%# byebug %>
<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時-->
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |u| %>
        <tr>
          <td><%= link_to u.name,public_user_path(u) %></td>
          <td><%= u.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがPostの時) -->
    <tbody>
      <% @posts.each do |po| %>
        <tr>
          <td><%= link_to po.user.name,public_user_path(po.user_id) %></td>
          <td><%= link_to po.body,public_post_path(po) %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>