<h2 class="text-center pb-5">検索結果</h2>
<table class="table table-hover table-inverse col-8 offset-md-2">
  <!--検索対象モデルがUserの時-->
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |u| %>
        <tr class="moves-contents" onclick='window.location="/publics/users/<%= u.id %>"' role="link">
          <td><%= u.name %></td>
          <td><%= u.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがPostの時) -->
    <tbody>
      <% @posts.each do |po| %>
        <tr class="moves-contents" onclick='window.location="/public/posts/<%= po.id %>"' role="link">
          <td><%= po.user.name %></td>
          <td><%= po.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>