<% sender = notification.sender %>
<% receiver = notification.receiver %>
<div class="row col-md-6 mx-auto form-inline">
  <span class="#"><%= link_to sender.name,public_user_path(sender) %></span><p class="text">さんが</p>
  <% case notification.action %>
    <% when "follow" then %>
      <p class="text">あなたをフォローしました。</p>
    <% when "favorite" then %>
      <p class="text"><%= link_to "あなたの投稿",public_post_path(notification.post) %>にいいねしました。</p>
    <% when "comment" then %>
      <% if notification.post.user_id == receiver.id %>
        <p class="text"><%= link_to "あなたの投稿",public_post_path(notification.post) %></p>
      <% else %>
        <p><%= link_to notification.post.user.name + "さんの投稿",public_post_path(notification.post) %></p>
      <% end %>
    <p class="text">にコメントしました。</p>
    <p class="text"><%= Comment.find_by(id: notification.comment_id)&.comment %></p>
    <p class="small text-muted text-right"><%= time_ago_in_words(notification.created_at).upcase  %></p>
  <% end %>

</div>