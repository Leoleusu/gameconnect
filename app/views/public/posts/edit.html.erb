<h1 class="text-center">投稿編集画面</h1>
<div class="row justify-content-center">
  <%= form_with model: @post, url: public_post_path, local: true do |f| %>
    <div class="form-group col-5 pt-2">
      <%= f.label :"本文" %>
      <%= f.text_area :body %>
    </div>
    <div class="action col-5">
      <%= f.submit "編集する",class: "btn btn-primary" %>
    </div>
    <% end %>
</div>