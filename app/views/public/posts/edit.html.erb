<h1 class="text">投稿編集画面</h1>
<div class="row">
  <%= form_with model: @post, url: public_post_path, local: true do |f| %>
    <div class="form-group">
      <%= f.label :"本文" %>
      <%= f.text_area :body %>
    </div>
    <div class="action">
      <%= f.submit "保存する",class: "btn" %>
    </div>
    <% end %>
</div>