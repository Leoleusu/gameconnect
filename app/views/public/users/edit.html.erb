<h2 class="text-center m-3">編集する</h2>
  <%= form_with model: @user, url: public_user_path, local: true do |f| %>
    <label class="d-block btn btn-outline-primary col-8 offset-2 col-md-4 offset-md-4">
      <i class="fas fa-camera-retro"></i><span class="ml-2">画像を選択する</span>
      <%= f.file_field :image,placeholder:"プロフィール画像",accept:"image/*",class: "d-none" %>
    </label>
    <div class="form-group offset-md-4 offset-1">
      <%= f.label :"名前",class: "col-md-2" %>
      <%= f.text_field :name,class: "offset-md-1" %>
    </div>
    <div class="form-group offset-md-4 offset-1">
      <%= f.label :"自己紹介文",class: "col-md-2" %>
      <%= f.text_area :introduction,class: "offset-md-1" %>
    </div>
    <div class="action offset-md-2 offset-3 mb-3">
      <%= link_to "戻る",public_user_path(current_user),class: "btn btn-success col-3 col-md-2 offset-md-2" %>
      <%= f.submit :"保存する",class: "btn btn-primary col-4 col-md-2 offset-md-2" %>
    </div>
  <% end %>

  <%= link_to "退会する",public_user_confirm_path,class: "btn btn-danger col-5 col-md-3 offset-md-5 offset-3" %>
</div>