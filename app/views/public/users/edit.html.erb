<h2 class="#">編集する</h2>
<div class="row">
  <%= form_with model: @user, url: public_user_path, local: true do |f| %>
    <div class="form-group">
      <%= f.label :"名前" %>
      <%= f.text_field :name %>
    </div>
    <div class="form-inline">
      <%= f.label :"自己紹介文" %>
      <%= f.text_area :introduction %>
    </div>
    <div class="action">
      <%= f.submit :"保存する" %>
    </div>
  <% end %>
</div>
<div class="row">
  <%= link_to "戻る",public_user_path(current_user),class: "btn"%>
  <%= link_to "退会する",public_user_confirm_path,class: "btn"%>
</div>