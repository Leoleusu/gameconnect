<h1 class="text-center">ユーザーページ</h1>
<div class="row">
  <div class = "col-6">
    <div class="card md-3 justify-content-center",style="max-width: 540px;">
      <div class="row no-gutters">
        <div class="col-md-3 w-75 h-75">
          <%= image_tag @user.get_image(150,150),class: "bd-placeholder-img" %>
        </div>
        <div class="col-md-8">
          <div class="card-body text-center no-wrapper">
            <h3 class="card-title"><%= @user.name %></h3>
            <p class="card-text"><%= @user.introduction %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% if current_user != @user %>
  <%# byebug %>
    <% if current_user.following?(@user) %>
    <% pp current_user.following?(@user) %>
      <%= link_to "フォローを外す",public_user_relationships_path(@user.id),method: :delete, class: "btn" %>
    <% else %>
      <%= link_to "フォローする",public_user_relationships_path(@user.id),method: :post, class: "btn" %>
    <% end %>
  <% end %>

</div>
<% if current_user == @user %>
  <%= link_to "編集する",edit_public_user_path(@user),class: "btn" %>
  <%= render 'public/shared/follow_list',users: @user.followings %>
  <%= render 'public/shared/follower_list',users: @user.followers %>
<% end %>