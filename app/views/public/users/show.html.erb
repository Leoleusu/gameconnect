<h1>ユーザーページ</h1>
<div class="row">
  <%= @user.name %>
  <% if @user.id != current_user.id? %>
    <% if current_user.following?(user) %>
      <%= link_to "フォローする",public_user_relationships_path(user.id),method: :destroy class: "btn" %>
    <% else %>
      <%= link_to "フォローする",public_user_relationships_path(user.id),method: :post class: "btn" %>
