<h2>検索結果</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時-->
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |u| %>
        <tr>
          <td><%= u.name %></td>
          <td><%= u.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがPostの時) -->
    <tbody>
      <% @posts.each do |po| %>
        <tr>
          <td><%= po.user.name %></td>
          <td><%= po.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>