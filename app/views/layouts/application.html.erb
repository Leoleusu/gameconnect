<!DOCTYPE html>
<html>
  <head>
    <title>Gameconnect</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  </head>

  <body class="d-flex flex-column h-100 w-100">
    <header>
      <div class="container-fluid bg-dark">
        <div class="row-fluid">
          <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <a class="navbar p-3 m-3" href="/">title</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                          aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse" id="Navbar">
              <ul class="navbar-nav m-auto">
                <% if user_signed_in? %>
                  <%= render 'public/shared/search' %>
                  <%= link_to public_notifications_path,class: "nav-link text-secondary ml-5" do %>
                  <i class="fas fa-bell fa-2x"></i><% end %>
                <% elsif admin_signed_in? %>
                  <%= render 'admin/shared/search' %>
                <% end %>
              </ul>
            </div>
          </nav>
        </div>
      </div>
    </header>

    <div class="container-fluid">
      <div class="row-fluid">
        <% if flash[:notice] %>
          <p class="text-success text-center"><%= notice %></p>
        <% elsif flash[:alert] %>
          <p class="text-danger text-center"><%= alert %></p>
        <% end %>
      </div>
      <div class="d-flex flex-column flex-shrink-0 p-3 bg-secondary">
        <ul class="nav nav-pills flex-column md-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to destroy_user_session_path,method: :delete,class: "nav-link text-light" do %>
              <i class="fas fa-right-from-bracket"></i>ログアウト
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to public_posts_path,class: "nav-link text-light" do %>
              <i class="fas fa-book"></i>投稿一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_public_post_path,class: "nav-link text-light" do %>
              <i class="fas fa-pen"></i>投稿する
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to public_user_path(current_user),class: "nav-link text-light" do %>
              <i class="fas fa-house"></i>マイページ
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to favorites_public_user_path(current_user),class: "nav-link text-light" do %>
              <i class="fas fa-heart"></i>お気に入り
              <% end %>
            </li>
          <% elsif admin_signed_in? %>
            <li class="nav-item">
              <%= link_to "ユーザー一覧",admin_users_path,class: "btn" %>
            </li>
            <li class="nav-item">
              <%= link_to "投稿一覧",admin_posts_path,class: "btn" %>
            </li>
            <li class="nav-item">
              <%= link_to "コメント一覧",admin_comments_path,class: "btn" %>
            </li>
            <li class="nav-item">
              <%= link_to "管理者ログアウト",destroy_admin_session_path,method: :delete,class: "btn" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "ログイン",new_user_session_path %>
            </li>
            <li class="nav-item">
              <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post %>
            </li>
            <li class="nav-item">
              <%= link_to "管理者ログイン",new_admin_session_path %>
            </li>
          <% end %>
        </ul>
      </div>
        <main class="bg-light flex-column">
          <%= yield %>
        </main>
     </div>

  </body>
</html>

