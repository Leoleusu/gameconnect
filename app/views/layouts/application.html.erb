<!DOCTYPE html>
<html>
  <head>
    <title>Gameconnect</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <!-- drawer.css -->
    <!--<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/drawer/3.2.1/css/drawer.min.css">-->
    <!--<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>-->
    <!--<script src="https://cdnjs.cloudflare.com/ajax/libs/iScroll/5.1.3/iscroll.min.js"></script>-->
    <!--<script src="https://cdnjs.cloudflare.com/ajax/libs/drawer/3.1.0/js/drawer.min.js"></script>-->

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://kit.fontawesome.com/c44cf8e6f4.js" crossorigin="anonymous"></script>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

  </head>

  <body class="drawer drawer--left h-100 w-100">
    <header role="banner">
      <div class="container-fluid bg-dark">
        <div class="row-fluid">
          <div class="form-inline">
            <button type="button" class="btn" data-toggle="modal" data-target="#modal-s" class="col-3">
            <i class="fas fa-bars fa-2x text-light p-2"></i>
          </button>
            <%= render 'layouts/sidemenu' %>
            <div class="col-9 ml-auto form-inline">
            <% if user_signed_in? %>
              <%= render 'public/shared/search'%>
              <%= link_to public_notifications_path,class: "nav-link text-secondary ml-auto mr-2" do %>
              <i class="fas fa-bell fa-2x"></i><% end %>
              <%= link_to public_user_path(current_user),class: "nav-link  mr-auto" do %>
              <%= image_tag current_user.get_image(40,40) %><% end %>
            <%# elsif admin_signed_in? %>
              <%#= render 'admin/shared/search' %>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </header>

    <div class="container-fluid row p-0 m-0">
        <main class="bg-light w-100">
          <div class="flash">
            <% if flash[:notice] %>
              <p class="text-success text-center"><%= notice %></p>
            <% elsif flash[:alert] %>
              <p class="text-danger text-center"><%= alert %></p>
            <% end %>
          </div>
          <%= yield %>
        </main>
      </div>
  </body>
</html>